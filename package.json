{
    "name": "nexus",
    "version": "0.1.0",
    "private": true,
    "description": "NEXUS - Code Review, Reimagined. Next-gen AI-powered stacked PR platform.",
    "license": "MIT",
    "author": "NEXUS Team",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "test": "turbo test",
        "test:unit": "turbo test:unit",
        "test:e2e": "turbo test:e2e",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "clean": "turbo clean && rm -rf node_modules"
    },
    "devDependencies": {
        "prettier": "^3.2.5",
        "tsup": "^8.5.1",
        "turbo": "^2.3.0",
        "typescript": "^5.7.0"
    },
    "packageManager": "pnpm@9.15.0",
    "engines": {
        "node": ">=20.0.0"
    }
}