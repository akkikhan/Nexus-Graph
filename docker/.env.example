# NEXUS Self-Hosted Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_PASSWORD=your_secure_password_here

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Generate with: openssl rand -base64 32
AUTH_SECRET=your_super_secret_auth_key_here

# =============================================================================
# GITHUB APP (Required for GitHub integration)
# Create at: https://github.com/settings/apps
# =============================================================================
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_WEBHOOK_SECRET=

# =============================================================================
# GITLAB (Optional)
# =============================================================================
GITLAB_CLIENT_ID=
GITLAB_CLIENT_SECRET=
GITLAB_URL=https://gitlab.com

# =============================================================================
# AI PROVIDERS (At least one required for AI features)
# =============================================================================
# Anthropic (Claude)
ANTHROPIC_API_KEY=

# OpenAI (GPT-4)
OPENAI_API_KEY=

# Google AI (Gemini)
GOOGLE_AI_API_KEY=

# =============================================================================
# APPLICATION URLS
# =============================================================================
WEB_URL=http://localhost:3000
API_URL=http://localhost:3001

# =============================================================================
# OPTIONAL: SMTP (for email notifications)
# =============================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=nexus@yourdomain.com

# =============================================================================
# OPTIONAL: SLACK (for notifications)
# =============================================================================
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=
