{
    "name": "@nexus/db",
    "version": "0.1.0",
    "private": true,
    "description": "NEXUS database schema and migrations",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio"
    },
    "dependencies": {
        "drizzle-orm": "^0.36.0",
        "postgres": "^3.4.5"
    },
    "devDependencies": {
        "drizzle-kit": "^0.28.0",
        "typescript": "^5.7.0"
    }
}